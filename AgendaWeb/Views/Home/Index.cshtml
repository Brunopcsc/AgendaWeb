@model IEnumerable<AgendaWeb.Models.Contato>

@{
    ViewBag.Title = "Home";
}

<h1>Minha Agenda</h1>

<p>
    @Html.ActionLink("Button Name", "Create", null, new { @class="botaoadd" }) 
</p>
<form asp-controller="Home" asp-action="Index" name='form' method="get">
    <p>
        <input class="form-control" name="SearchString" list="datalistOptions" onchange="submitform()" placeholder="Pesquisar...">

    </p>
</form>
<table class="table" id="alter">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.celular)
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.celular)
            </td>
            <td class="nav">
                @Html.ActionLink("Editar", "Edit", new { id = item.contato_id }, new { @class = "botaoedit" }) 
                @Html.ActionLink("Detalhes", "Details", new { id = item.contato_id }, new { @class = "botaodetalhes" }) 
                @Html.ActionLink("Remover", "Delete", new { id = item.contato_id }, new { @class = "botaoremover" })
            </td>
        </tr>
    }

</table>
